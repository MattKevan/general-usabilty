---
layout: nil
---
[
  {% for post in site.documents %}
    {
      {% if post.layout == 'link' %}
      "title"    : "<i class=\"fas fa-link\"></i> {{ post.title | escape }}",
      {% else %}
      "title"    : "<i class=\"fas fa-file-alt\"></i> {{ post.title | escape }}",
      {% endif %}

      "category" : "{{ post.category }}",
      "tags"     : "{{ post.tags | join: ', ' }}",

      {% if post.layout == 'link' %}
      "url"   : "{{ post.linkurl }}\" target=\"_blank",

      {% else %}
      "url"      : "{{ site.baseurl }}{{ post.url }}",
      {% endif %}
      "layout"   : "{{ post.layout }}",
      "date"     : "{{ post.date }}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
