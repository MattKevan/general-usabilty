---
layout: nil
---
[
  {% for post in site.documents %}
    {
      "title"    : "<i class=\"fas fa-{{ post.type }}\"></i> {{ post.title | escape }}",
      "category" : "{{ post.category }}",
      "tags"     : "{{ post.tags | join: ', ' }}",

      {% if post.layout == 'link' %}
      "url"   : "{{ post.linkurl }}\" target=\"_blank",

      {% else %}
      "url"      : "{{ site.baseurl }}{{ post.url }}",
      {% endif %}
      "layout"   : "{{ post.layout }}",
      "date"     : "{{ post.date }}",
      "intro"    : "{{ post.intro | truncate: 40}}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]