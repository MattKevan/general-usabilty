---
layout: nil
---
[
  {% for post in site.books %}
    {
      "title"       : "<i class=\"fas fa-book\"></i> {{ post.title | escape }}",
      "tags"        : "{{ post.tags | join: ', ' }}",
      "authors"     : "{{ post.authors | escape }}",
      "url"         : "{{ site.baseurl }}{{ post.url }}",
      "publisher"   : "{{ post.publisher | escape }}",
      "content"     : "{{ post.exerpt }}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
